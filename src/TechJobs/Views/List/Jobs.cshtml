<h1>@ViewBag.title</h1>


<a asp-controller="Search" asp-action="Results" />
<h3>@ViewBag.jobs.Count Result(s)</h3>

@{foreach (var job in ViewBag.jobs)
   {
    <table class="job-listing">
        <tr>Name: @job["name"]</tr>
        <br />
        <tr>Employer: @job["employer"]</tr>
        <br />
        <tr>Location: @job["location"]</tr>
        <br />
        <tr>Position Type: @job["position type"]</tr>
        <br />
        <tr>Core Competency: @job["core competency"]</tr>
        <br />

    </table>     
        // TODO #3 - Use the same list display from Views/Search/Index.cshtml

    }
 }
    
